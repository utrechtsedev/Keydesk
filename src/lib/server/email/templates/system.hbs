{{#> layout}}
    <!-- System notification content -->
    <tr>
        <td style="padding: 32px 40px;" class="mobile-padding">
            <table role="presentation" style="width: 100%; border-left: 3px solid #e5e7eb; background-color: #fafafa; padding: 20px; border-radius: 4px;" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td>
                        <h2 style="margin: 0 0 12px; font-size: 18px; font-weight: 600; color: #0f172a;">
                            {{title}}
                        </h2>
                        <div style="font-size: 15px; line-height: 1.6; color: #334155;">
                            <p style="margin: 0;">
                              {{message}}
                            </p>
                        </div>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
    
    <!-- Action button -->
    <tr>
        <td style="padding: 0 40px 32px;" class="mobile-padding">
            <table role="presentation" style="width: 100%;" cellpadding="0" cellspacing="0" border="0">
                <tr>
                    <td align="center">
                        <a href="{{actionUrl}}" target="_blank" style="display: inline-block; padding: 12px 32px; background-color: #0f172a; color: #ffffff; text-decoration: none; border-radius: 6px; font-size: 14px; font-weight: 500; letter-spacing: 0.01em;">
                            View Details
                        </a>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
{{/layout}}
